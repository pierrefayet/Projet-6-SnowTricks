{% extends 'layout.html.twig' %}
{% block main %}
    //Todo faire une fenetre qui s'ouvre en js pour confirmer la suppretion ou la modification d'une card
    <main>
        <section class="intro-background">
            <div class="intro-trick" style="background-image: url('/assets/img/surfeur.jpg');"></div>
        </section>
        <section class="content">
            <div id="content-trick">
                <div class="content-header" style="background-image: url('/assets/tricks/50 50 Grinds.png');">
                    <div class="content-trick-image-title">
                        <h1>
                            {{ trick.title }}
                        </h1>
                    </div>
                    <div class="content-trick-image--icon">
                        <div id="pencil"><a href="/update_tricks/{{ trick.id }}"><i class="fa-solid fa-pencil"></i></a>
                        </div>
                        <div id="trash-can"><a href="/delete_trick/{{ trick.id }}"><i class="fa-solid fa-trash-can"></i></a>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="content-media-tricks">
                        {% for media in trick.medias %}
                            {% if media.type == 'image' %}
                                <img src="{{ media.filename }}" alt="{{ media.alt }}">
                            {% elseif media instanceof App\\Entity\\Video %}
                                <video controls>
                                    <source src="{{ media.filename }}"
                                            type="video/mp4">
                                    Votre navigateur ne prend pas en charge la balise vid√©o.
                                </video>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="media-expand">
                        <div class="media-expand-content">See medias</div>
                    </div>
                    <div class="content-description">
                        <p>
                            {{ trick.content }}
                        </p>
                    </div>
                    <div class="content-information">
                        <div class="content-information-item">Lorem Ipsilum</div>
                        <div class="content-information-item">Lorem Ipsilum</div>
                        <div class="content-information-item">Lorem Ipsilum</div>
                        <div class="content-information-item">Lorem Ipsilum</div>
                    </div>
                    <div class="content-form">
                        <div class="content-form--content">
                            <form action="" method="post">
                                <label for="form-comment"></label>
                                <input type="text" id="form-comment" name="comment">
                                <button type="submit">Leave a comment</button>
                            </form>
                        </div>
                    </div>
                    <div class="content-comment-container">
                        <div class="content-comment">
                            <div class="content-comment-items">
                                <div class="content-comment--icon">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="content-comment--content">
                                    <p>Anteposuit anteibat omnes nostro ille Maximum in se parem erat.</p>
                                </div>
                            </div>
                            <div class="content-comment-items">
                                <div class="content-comment--icon">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="content-comment--content">
                                    <p>Anteposuit anteibat omnes nostro ille Maximum in se parem erat.</p>
                                </div>
                            </div>
                            <div class="content-comment-items">
                                <div class="content-comment--icon">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="content-comment--content">
                                    <p>Anteposuit anteibat omnes nostro ille Maximum in se parem erat.</p>
                                </div>
                            </div>
                        </div>
                        <div class="container-expand">
                            <div id="expand">
                                <div>
                                    <p><i class="fa-solid fa-spinner"></i></p>
                                </div>
                                <div>
                                    <p>Load more</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <div class="navbar-mobile">
        <ul>
            <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
            <li><a href="/single_trick"><i class="fa-solid fa-bookmark"></i></a></li>
            <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
            <!-- <li><i class="fa-solid fa-right-from-bracket"></i></li> -->
        </ul>
    </div>
{% endblock %}
