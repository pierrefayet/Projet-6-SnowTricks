{% extends 'layout.html.twig' %}
{% block main %}
    <main class="connection-reset">
        <div class="connection-title">
            <div class="connection-title-content">
                Forgot Password
            </div>
        </div>
        <section class="connection-form">
            {{ form_start(forgotPassword, {'attr': {'class': 'connection-content'}}) }}
            <div id="user_name">
                {{ form_row(forgotPassword.userName, {'attr': {'id': 'Username'}}) }}
            </div>
            <div class="button-laptop">
                <button type="submit">Ask for reset password</button>
            </div>
            <div class="button-mobil">
                <button type="submit">Ask for reset</button>
            </div>
            {{ form_rest(forgotPassword) }}
            {{ form_end(forgotPassword) }}
        </section>
    </main>
    <div class="navbar-mobile">
        <ul>
            <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
            <li><a href="/single_trick"><i class="fa-solid fa-bookmark"></i></a></li>
            <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
            <!-- <li><i class="fa-solid fa-right-from-bracket"></i></li> -->
        </ul>
    </div>
{% endblock %}
