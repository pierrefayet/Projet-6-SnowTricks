{% extends 'layout.html.twig' %}
{% block header %}
    <header>
        <div id="header">
            <div class="header-picture">
                <img src="/assets/img/logo.png" alt="surfer">
            </div>
            <div class="navbar">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="#portfolio">Trick</a></li>
                    <li><a href="/create_account">Sign in</a></li>
                    <li><a href="/login">Sign up</a></li>
                </ul>
            </div>
        </div>
    </header>
{% endblock %}
{% block main %}
// TODO: ajouter une icone log out si l'utilisateur est connecté.
<main>
    <section class="intro" style="background-image: url('/assets/img/surfeur.jpg');">
        <div>
            <p>
                Rejoignez la communauté Snow tricks la plus cool sur la neige et partagez votre passion pour le snow
                avec des riders du monde entier !
            </p>
        </div>
        <div class="scroll-arrow-down" id="scroll-down">
            <a href="#expand">
                <i class="fa-solid fa-arrow-down"></i>
            </a>
        </div>
    </section>
    <section id="portfolio">
        <div class="card">
            <div class="card-image">
                <a href="/single_trick">
                    <img src="/assets/tricks/50 50 Grinds.png" alt="figure de snowboard">
                </a>
            </div>
            <div class="card-content">
                <div class="card-header">
                    <h4>Grab</h4>
                </div>
                <div class="card-icons">
                    <span class="icon"><a href="/update_tricks"><i class="fa-solid fa-pencil"></i></a></span>
                </div>
                <div class="card-icons">
                    <span class="icon"><a href="/update_tricks"><i class="fa-solid fa-trash-can"></i></a></span>
                </div>
            </div>
        </div>
        {% for tricks in trick %}
        <div class="card">
            <div class="card-image">
                <a href="/single_trick">
                    <img src="/assets/tricks/50 50 Grinds.png" alt="figure de snowboard">
                </a>
            </div>
            <div class="card-content">
                <div class="card-header">
                    <h4>Grab</h4>
                </div>
                <div class="card-icons">
                    <span class="icon"><a href="/update_tricks"><i class="fa-solid fa-pencil"></i></a></span>
                </div>
                <div class="card-icons">
                    <span class="icon"><a href="/update_tricks"><i class="fa-solid fa-trash-can"></i></a></span>
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
    <div id="expand">
        <div>
            <p><i class="fa-solid fa-spinner"></i></p>
        </div>
        <div>
            <p>Load more</p>
        </div>
    </div>
    <div class="scroll-arrow-up" id="scroll-up">
        <a href="#portfolio">
            <i class="fa-solid fa-arrow-up"></i>
        </a>
    </div>
    <div class="navbar-mobile">
        <ul>
            <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
            <li><a href="/single_trick"><i class="fa-solid fa-bookmark"></i></a></li>
            <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
            <!-- <li><i class="fa-solid fa-right-from-bracket"></i></li> -->
        </ul>
    </div>
</main>
{% block javascripts %}{% endblock %}
{% endblock %}
