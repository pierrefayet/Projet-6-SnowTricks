{% extends 'layout.html.twig' %}
{% block main %}
    <main>
        <section class="intro-background">
            <div class="intro-trick"
                 style="background-image: url({{ asset('build/images/50_50_Grinds.51e6a335.png') }});"></div>
        </section>
        <section class="content">
            {{ form_start(trickForm) }}
            <div id="content-trick">
                <div class="content-header"
                     style="background-image: url({{ asset('build/images/50_50_Grinds.51e6a335.png') }});">
                    <div class="content-trick-image-title">
                        <h1>

                        </h1>
                    </div>
                    <div class="content-trick-image--icon">
                        <div id="pencil"><i class="fa-solid fa-pencil"></i></div>
                        <div id="trash-can"><i class="fa-solid fa-trash-can"></i></div>
                    </div>
                </div>
                <div class="content-media">
                    <div class="media-tricks--modifier">
                        <div class="media-tricks-modifier-content">
                            <img src="" alt="surfer">
                            <div class="modifier-icons">
                                <div class="modifier-icons-content">
                                    <div><i class="fa-solid fa-pencil"></i></div>
                                    <div><i class="fa-solid fa-trash-can"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% for media in trick.medias %}
                    <div class="media-tricks--modifier">
                        <div class="media-tricks-modifier-content">
                            {% if media.type == 'image' %}
                                <img src="{{ asset('path/to/uploads/image' ~ media.filename) }}" alt="surfer">
                            {% elseif media.type == 'video' %}
                                <video src="{{ asset('path/to/uploads/video' ~ media.filename) }}">
                            {% endif %}
                            {% endfor %}
                            <div class="modifier-icons">
                                <div class="modifier-icons-content">
                                    <div><i class="fa-solid fa-pencil"></i></div>
                                    <div><i class="fa-solid fa-trash-can"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="media-expand">
                    <div class="media-expand-content">See medias</div>
                </div>

                <div class="information-content">
                    <div class="content-description-scroll">
                        <p>{{ trick.content }}
                        </p>
                    </div>
                    <div class="information-actions">
                        <div class="select-group">
                            <select name="groups" id="select-group">
                                {% for tag in trick.tags %}
                                    <option value="{{ tag.id }}">{{ tag.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="button-content">
                            <div class="delete">
                                {{ form_row(trickForm.delete) }}
                            </div>
                            <div class="save">
                                {{ form_row(trickForm.save) }}
                            </div>
                        </div>
                        {{ form_rest(trickForm) }}
                        {{ form_end(trickForm) }}
                    </div>
                </div>
            </div>
        </section>
        <div class="navbar-mobile">
            <ul>
                <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
                <li><a href="/single_trick"><i class="fa-solid fa-bookmark"></i></a></li>
                <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
                <!-- <li><i class="fa-solid fa-right-from-bracket"></i></li> -->
            </ul>
        </div>
    </main>
{% endblock %}
