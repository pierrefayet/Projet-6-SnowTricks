{% extends 'layout.html.twig' %}
{% block main %}
    <main class="connection">
        <div class="connection-title">
            <div class="connection-title-content">
                Registration
            </div>
        </div>
        <section class="connection-form">
            {{ form_start(registration, {'attr': {'class': 'connection-content'}}) }}
            <div id="user_name">
                {{ form_row(registration.user_name, {'attr': {'id': 'Username'}}) }}
            </div>
            <div id="email">
                {{ form_row(registration.email, {'attr': {'id': 'email'}}) }}
            </div>
            <div id="user_password">
                {{ form_row(registration.password, {'attr': {'id': 'userPassword'}}) }}
            </div>
            <div class="button">
                <button type="submit">Create an account</button>
            </div>
            <div class="link-login"><a href="/single_trick">Already an account ?</a></div>
            {{ form_rest(registration) }}
            {{ form_end(registration) }}
        </section>
    </main>
    <div class="navbar-mobile">
        <ul>
            <li><a href="/"><i class="fa-solid fa-house"></i></a></li>
            <li><a href="/single_trick"><i class="fa-solid fa-bookmark"></i></a></li>
            <li><a href="/login"><i class="fa-solid fa-user"></i></a></li>
            <!-- <li><i class="fa-solid fa-right-from-bracket"></i></li> -->
        </ul>
    </div>
{% endblock %}
